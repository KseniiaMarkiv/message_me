<h1 class="ui header">
  <div class="row images">
    <i id=Size><img class="ui bottom aligned tiny circular image" src="<%= image_path('cat.png') %>" /></i>
      Say Something
  </div>  
</h1>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">

          <%= render @messages %>
          
        </div>
      </div>
      <div class="extra content">
        
        <%= form_for(@message, html: {class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              
              <%= f.text_field :body, placeholder: "Enter a message..." %>
              <%= f.button '<i class="bordered inverted teal edit icon"></i>'.html_safe, id: "own-fix" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>


  <div class="four wide column">
    <div class="ui teal vertical fluid right tabular card menu chatbox">
      <div class="content">
        <a class="active item">
          Home
        </a>
        <a class="item">
          Messages
        </a>
        <a class="item">
          Friends
        </a>
      </div>
    </div>
  </div>
</div>